                                    </option>
                                    <% } %>
                        </select>

                        <button id="btn-filtrar" class="btn-secondary" type="button">Buscar</button>
                        <button id="btn-limpar" class="btn-secondary" type="button">Limpar Filtros</button>
                        <!-- Novo bot√£o -->
                    </div>

                    <script>
                        // Fun√ß√£o para aplicar filtro (reutilizada para ambos os bot√µes)
                        async function aplicarFiltro(tipo = '', mes = '', ano = '') {
                            const params = new URLSearchParams();
                            if (tipo) params.append("tipo", tipo);
                            if (mes) params.append("mes", mes);
                            if (ano) params.append("ano", ano);

                            try {
                                const response = await fetch(`/doacoes/minhas?${params.toString()}`, {
                                    headers: {
                                        'X-Requested-With': 'XMLHttpRequest'
                                    }
                                });

                                if (!response.ok) {
                                    throw new Error('Erro na requisi√ß√£o');
                                }

                                const data = await response.json();

                                // Atualizar a tabela
                                const tbody = document.querySelector('table tbody');
                                tbody.innerHTML = ''; // Limpar conte√∫do atual

                                if (data.doacoes && data.doacoes.length > 0) {
                                    data.doacoes.forEach(d => {
                                        const row = document.createElement('tr');

                                        // Data
                                        const tdData = document.createElement('td');
                                        tdData.textContent = new Date(d.doacao_data).toLocaleDateString("pt-BR");
                                        row.appendChild(tdData);

                                        // Valor/Tipo
                                        const tdValor = document.createElement('td');
                                        if (d.doacao_tipo === "Financeira") {
                                            tdValor.textContent = `R$ ${d.doacao_valor} (Financeira)`;
                                        } else if (d.doacao_tipo === "Produto") {
                                            tdValor.textContent = `${d.doacao_categoria_item} (Produto)`;
                                        } else if (d.doacao_tipo === "Alimento") {
                                            tdValor.textContent = `${d.doacao_categoria_item} (Alimento)`;
                                        }
                                        row.appendChild(tdValor);

                                        // Status
                                        const tdStatus = document.createElement('td');
                                        const span = document.createElement('span');
                                        span.className = d.doacao_status === "Aprovada" ? "badge badge-success" :
                                            d.doacao_status === "Pendente" ? "badge badge-warning" : "badge badge-danger";
                                        span.textContent = d.doacao_status === "Aprovada" ? "Conclu√≠da" :
                                            d.doacao_status === "Pendente" ? "Pendente" : "Recusada";
                                        tdStatus.appendChild(span);
                                        row.appendChild(tdStatus);

                                        tbody.appendChild(row);
                                    });
                                } else {
                                    const row = document.createElement('tr');
                                    const td = document.createElement('td');
                                    td.colSpan = 4;
                                    td.textContent = 'Nenhuma doa√ß√£o registrada.';
                                    row.appendChild(td);
                                    tbody.appendChild(row);
                                }

                                // Atualizar resumo
                                document.querySelector('.resumo-total p:nth-child(1) strong').nextSibling.textContent = ` R$ ${data.totais.totalMes}`;
                                document.querySelector('.resumo-total p:nth-child(2) strong').nextSibling.textContent = ` R$ ${data.totais.totalAno}`;
                                document.querySelector('.resumo-total p:nth-child(3) strong').nextSibling.textContent = ` R$ ${data.totais.totalGeral}`;
                                document.querySelector('.resumo-total p:nth-child(4) strong').nextSibling.textContent = ` ${data.totais.ranking}`;

                            } catch (error) {
                                console.error('Erro ao aplicar filtro:', error);
                            }
                        }

                        // Evento para o bot√£o "Buscar"
                        document.getElementById("btn-filtrar").addEventListener("click", () => {
                            const tipo = document.getElementById("filtro-tipo").value;
                            const mes = document.getElementById("filtro-mes").value;
                            const ano = document.getElementById("filtro-ano").value;
                            aplicarFiltro(tipo, mes, ano);
                        });

                        // Evento para o bot√£o "Limpar Filtros"
                        document.getElementById("btn-limpar").addEventListener("click", () => {
                            // Resetar os selects para valores vazios
                            document.getElementById("filtro-tipo").value = "";
                            document.getElementById("filtro-mes").value = "";
                            document.getElementById("filtro-ano").value = "";
                            // Aplicar filtro sem par√¢metros (mostra tudo)
                            aplicarFiltro();
                        });
                    </script>

