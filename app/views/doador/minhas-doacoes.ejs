    <script>
        const sidebarItems = document.querySelectorAll('.sidebar-item');
        const contents = document.querySelectorAll('.conteudo');

        sidebarItems.forEach(item => {
            item.addEventListener('click', () => {
                sidebarItems.forEach(i => i.classList.remove('active'));
                contents.forEach(c => c.classList.remove('ativo'));
                item.classList.add('active');
                const targetId = item.dataset.target;
                const targetContent = document.getElementById(targetId);
                if (targetContent) {
                    targetContent.classList.add('ativo');
                }
            });
        });

        // Inicializar a primeira aba ao carregar a p√°gina
        if (document.querySelector('.sidebar-item.active')) {
            const initialTarget = document.querySelector('.sidebar-item.active').dataset.target;
            const initialContent = document.getElementById(initialTarget);
            if (initialContent) {
                initialContent.classList.add('ativo');
            }
        } else if (sidebarItems.length > 0) {
            // Se nenhuma estiver ativa, ative a primeira
            sidebarItems[0].classList.add('active');
            document.getElementById(sidebarItems[0].dataset.target).classList.add('ativo');
        }
    </script>
