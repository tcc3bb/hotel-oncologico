<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fundação Vita</title>
    <link rel="icon" href="/image/logo.png">
    <link rel="stylesheet" href="/css/questionarios/style_admin.css">
</head>

<body>
    <div class="form-wrapper">
        <h2>Cadastro de Administrador</h2>

        <!-- Simulação do bloco de erro EJS -->
        <% if (erro) { %>
            <p class="error-message">Erro de preenchimento: Por favor, verifique os campos em vermelho.</p>
            <% } %>

                <form method="POST">
                    <!-- Hidden field -->
                    <input type="hidden" name="usuario_id" value="<%= usuarioId %>">

                    <!-- DADOS PESSOAIS -->
                    <fieldset>
                        <legend>Dados Pessoais</legend>
                        <div class="field-group">
                            <div class="form-control" style="--span:2;">
                                <label for="admin_nome">Nome completo:</label>
                                <input type="text" id="admin_nome" name="admin_nome" required>
                            </div>

                            <div class="form-control">
                                <label for="admin_cpf">CPF:</label>
                                <input type="text" id="admin_cpf" name="admin_cpf" maxlength="14"
                                    placeholder="000.000.000-00">
                            </div>

                            <div class="form-control">
                                <label for="admin_rg">RG:</label>
                                <input type="text" id="admin_rg" name="admin_rg" maxlength="20">
                            </div>

                            <div class="form-control">
                                <label for="admin_data_nascimento">Data de Nascimento:</label>
                                <input type="date" id="admin_data_nascimento" name="admin_data_nascimento">
                            </div>

                            <div class="form-control">
                                <label for="admin_sexo">Sexo:</label>
                                <select id="admin_sexo" name="admin_sexo">
                                    <option value="">Selecione</option>
                                    <option value="Masculino">Masculino</option>
                                    <option value="Feminino">Feminino</option>
                                    <option value="Outro">Outro</option>
                                </select>
                            </div>

                            <div class="form-control">
                                <label for="admin_estado_civil">Estado Civil:</label>
                                <select id="admin_estado_civil" name="admin_estado_civil">
                                    <option value="">Selecione</option>
                                    <option value="Solteiro(a)">Solteiro(a)</option>
                                    <option value="Casado(a)">Casado(a)</option>
                                    <option value="Divorciado(a)">Divorciado(a)</option>
                                    <option value="Viúvo(a)">Viúvo(a)</option>
                                    <option value="Outro">Outro</option>
                                </select>
                            </div>
                        </div>
                    </fieldset>

                    <!-- CONTATO -->
                    <fieldset>
                        <legend>Contato</legend>
                        <div class="field-group">
                            <div class="form-control">
                                <label for="admin_telefone">Telefone:</label>
                                <input type="tel" id="admin_telefone" name="admin_telefone" maxlength="20">
                            </div>

                            <div class="form-control">
                                <label for="admin_celular">Celular:</label>
                                <input type="tel" id="admin_celular" name="admin_celular" maxlength="20">
                            </div>

                            <div class="form-control">
                                <label for="admin_email_alternativo">E-mail alternativo:</label>
                                <input type="email" id="admin_email_alternativo" name="admin_email_alternativo">
                            </div>
                        </div>
                    </fieldset>

                    <!-- ENDEREÇO -->
                    <fieldset>
                        <legend>Endereço</legend>
                        <div class="field-group">
                            <div class="form-control full-width">
                                <label for="admin_endereco">Endereço:</label>
                                <input type="text" id="admin_endereco" name="admin_endereco">
                            </div>

                            <div class="form-control">
                                <label for="admin_numero">Número:</label>
                                <input type="text" id="admin_numero" name="admin_numero" maxlength="10">
                            </div>

                            <div class="form-control">
                                <label for="admin_bairro">Bairro:</label>
                                <input type="text" id="admin_bairro" name="admin_bairro">
                            </div>

                            <div class="form-control">
                                <label for="admin_cidade">Cidade:</label>
                                <input type="text" id="admin_cidade" name="admin_cidade">
                            </div>

                            <div class="form-control">
                                <label for="admin_estado">Estado:</label>
                                <input type="text" id="admin_estado" name="admin_estado">
                            </div>

                            <div class="form-control">
                                <label for="admin_cep">CEP:</label>
                                <input type="text" id="admin_cep" name="admin_cep" maxlength="10">
                            </div>
                        </div>
                    </fieldset>

                    <!-- INFORMAÇÕES DE CARGO E ACESSO -->
                    <fieldset>
                        <legend>Informações do Administrador</legend>
                        <div class="field-group">
                            <div class="form-control">
                                <label for="admin_cargo">Cargo:</label>
                                <input type="text" id="admin_cargo" name="admin_cargo" required>
                            </div>

                            <div class="form-control">
                                <label for="admin_nivel_acesso">Nível de Acesso:</label>
                                <select id="admin_nivel_acesso" name="admin_nivel_acesso">
                                    <option value="Super Admin">Super Admin</option>
                                    <option value="Admin" selected>Admin</option>
                                    <option value="Moderador">Moderador</option>
                                    <option value="Suporte">Suporte</option>
                                </select>
                            </div>

                            <div class="form-control">
                                <label for="admin_data_inicio">Data de Início:</label>
                                <input type="date" id="admin_data_inicio" name="admin_data_inicio">
                            </div>

                            <div class="form-control">
                                <label for="admin_data_saida">Data de Saída:</label>
                                <input type="date" id="admin_data_saida" name="admin_data_saida">
                            </div>
                        </div>
                    </fieldset>

                    <!-- OBSERVAÇÕES (Full Width) -->
                    <fieldset>
                        <legend>Observações</legend>
                        <div class="form-control">
                            <label for="admin_observacoes">Observações (Geral):</label>
                            <textarea id="admin_observacoes" name="admin_observacoes"></textarea>
                        </div>

                        <div class="form-control mt-4">
                            <label for="admin_observacoes_internas">Observações Internas (Confidenciais):</label>
                            <textarea id="admin_observacoes_internas" name="admin_observacoes_internas"></textarea>
                        </div>
                    </fieldset>

                    <button type="submit">Enviar Cadastro</button>
                </form>
    </div>
</body>

</html>